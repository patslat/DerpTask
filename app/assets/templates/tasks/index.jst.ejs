<div class="tasks-view">
  <% collection.each(function(task) { %>
    <div class="task-all-detail">

      <div class="priority very-high"></div>

      <div class="task-status">
        <% if (task.escape("status") === "In Progress") { %>
          <i class="icon-play"></i>
        <% } else if (task.escape("status") === "On Hold") { %>
          <i class="icon-pause"></i>
        <% } %>
      </div>

      <div class="task-title">
        <a id="taskShow" href="#" data-id="<%= task.id %>"><%= task.escape("title") %></a>
      </div>

      <div class="task-parents">
        <% var group = task.get("group") %>
        <% var project = group.get("project")%>
        <%= project.escape("name") %> > <%= group.escape("name") %>
      </div>

      <div class="task-due-date">
        <% var date = new Date(task.escape("due_date")); %>
        Due:  <%= date.toTimeString() %>
        <br>
        On: <%= date.toDateString() %>
      </div>


    </div>

  <% })%>
</div>