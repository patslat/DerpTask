<div id="groups-header">
  <div class="btn-group navigation-buttons span2">
    <a href='#/projects/<%= model.id %>/animated'
      class="btn btn-small group animated">
        Toggle View: <i class="icon-certificate"></i>
    </a>
  </div>
</div>

<div class="groups-view">
  <div class="offset2 span5">
    <h2>
      <%= model.escape("name") %>
      <a href="#newgroup" class="btn" data-toggle="modal">
        <i class="icon-plus"></i>
      </a>
    </h2>
  </div>
  <div class="offset4 span3">

  </div>
</div>

<div id="newgroup" class="modal hide fade" tabindex="-1"
     role="form"  aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
      x
    </button>
    <h3 id="new-group-form">New Group</h3>
  </div>
  <div class="modal-body">
    <div id="#new-group">
      <h4>New Group</h4>
        Group Name: <input type="text" name="group[name]">
    </div>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button id="submit-new-group" data-dismiss="modal" class="btn btn-primary">
      Create
    </button>
  </div>
</div>